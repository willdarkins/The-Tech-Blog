<div class="card shadow p-3 mb-5">
    <h5 class="card-header">Signup</h5>
    <form class="login-form">
        <div class="mb-3">
            <label for="email-login" class="form-label">Username</label>
            <textarea class="form-control" id="username-signup" rows="1"></textarea>
        </div>
        <div class="mb-3">
            <label for="email-login" class="form-label">Email address</label>
            <input type="text" class="form-control" id="email-signup" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="password-login" class="form-label">Password</label>
            <input type="password" class="form-control" id="password-signup">
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Signup</button>
        </div>
    </form>
</div>
<script src="/javascript/login.js"></script>