{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <button type="button" class="btn btn-primary btn-sm"><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a></button>
    </li>
    {{/each}}
  </ol>
</section>
